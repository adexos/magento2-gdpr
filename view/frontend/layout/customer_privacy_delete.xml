<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>Delete Account</title>
    </head>
    <body>
        <referenceBlock name="customer-account-navigation-privacy-link">
            <arguments>
                <argument name="is_highlighted" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="customer-account-privacy-delete" template="Adexos_Gdpr::account/delete.phtml" ifconfig="gdpr/erasure/enabled" cacheable="false">
                <arguments>
                    <argument name="settingsDataProvider" xsi:type="object">Adexos\Gdpr\ViewModel\Privacy\SettingsDataProvider</argument>
                    <argument name="urlsDataProvider" xsi:type="object">Adexos\Gdpr\ViewModel\UrlsDataProvider</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

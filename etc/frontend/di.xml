<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- ACL & Authorization -->
    <type name="Adexos\Gdpr\Controller\AbstractPrivacy">
        <plugin name="check_is_module_enabled" type="Adexos\Gdpr\Plugin\Controller\PrivacyActionPlugin" sortOrder="0" />
    </type>
    <type name="Adexos\Gdpr\Controller\Privacy\Delete">
        <plugin name="check_is_delete_available" type="Adexos\Gdpr\Plugin\Controller\DeleteActionPlugin" sortOrder="0" />
    </type>
    <type name="Adexos\Gdpr\Controller\Privacy\DeletePost">
        <plugin name="check_is_delete_allowed" type="Adexos\Gdpr\Plugin\Controller\DeleteActionPlugin" sortOrder="0" />
    </type>
    <type name="Adexos\Gdpr\Controller\Privacy\UndoDelete">
        <plugin name="check_is_undo_allowed" type="Adexos\Gdpr\Plugin\Controller\DeleteActionPlugin" sortOrder="0" />
    </type>
    <type name="Adexos\Gdpr\Controller\Privacy\Export">
        <arguments>
            <argument name="archive" xsi:type="object">Adexos\Gdpr\Model\Archive\Zip</argument>
        </arguments>
    </type>
</config>
